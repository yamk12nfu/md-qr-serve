{
  "name": "md-qr-serve",
  "displayName": "Serve MD with QR",
  "description": "Serve Markdown files via local HTTP and display QR code for mobile access",
  "version": "0.0.1",
  "publisher": "yamibaito",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "md-qr-serve.start",
        "title": "Serve MD with QR: Start Server"
      },
      {
        "command": "md-qr-serve.stop",
        "title": "Serve MD with QR: Stop Server"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "md-qr-serve.start",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "md-qr-serve.start",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "md-qr-serve.start"
        },
        {
          "command": "md-qr-serve.stop"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "marked": "^17.0.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.0",
    "typescript": "^5.3.0"
  }
}
